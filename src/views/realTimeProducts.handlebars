<div class="container">
    <h1 class="mt-5 mb-4 text-center text-dark">Real Time Products</h1>
    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body shadow p-3 mb-5 bg-white rounded">
                    <h2 class="mb-4 text-success text-center">A침adir nuevo producto</h2>
                    <form id="addProductForm">
                        <div class="mb-3">
                            <input type="text" id="title" class="form-control" placeholder="Nombre del Producto" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" id="description" class="form-control" placeholder="Descripci칩n del producto" required>
                        </div>
                        <div class="mb-3">
                            <input type="number" id="price" class="form-control" placeholder="Precio del producto" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" id="thumbnail" class="form-control" placeholder="URL de la imagen (thumbnail)" required>
                        </div>
                        <button type="submit" class="btn btn-success">A침adir</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-primary">Nombre</th>
                        <th class="text-primary">Descripci칩n del producto</th>
                        <th class="text-primary">Precio</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="productList" class="text-light">
                    {{#each products}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.description}}</td>
                            <td>${{this.price}}</td>
                            <td><button onclick="confirmDelete('{{this.id}}')" class="btn btn-danger">Eliminar  
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
