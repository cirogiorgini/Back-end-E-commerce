<div>
    <h1 class="white">{{title}}</h1>
    <div>
        <ul>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>${{price}}</td>
                        <td>{{stock}}</td>
                        <td>
                            <button class="btn btn-warning" onclick="editProduct('{{_id}}')">
                                Editar
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteProduct('{{_id}}')">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </ul>
    </div>
</div>

