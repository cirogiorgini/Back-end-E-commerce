<div>
    <h1 class="white">{{title}}</h1>
    <div>
        <ul>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Firstname</th>
                        <th scope="col">Lastname</th>
                        <th scope="col">Gmail</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Cambiar rol</th>
                        <th scope="col">Eliminar usuario</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usersList}}
                    <tr>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{rol}}</td>
                        <td>
                            <button class="btn btn-primary" onclick="toggleRole('{{_id}}', '{{rol}}')">
                                Cambiar a {{#if (eq rol 'usuario')}}Premium{{else}}Usuario{{/if}}
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteUser('{{_id}}')">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </ul>
    </div>

            
    <div class="d-flex align-items-center"> 
        <p class="p-3 mb-2 bg-white text-dark">Eliminar todos los usuarios que tienen 2 dias de inactividad<p/> 
        <button class="btn btn-danger" onclick="deleteInactiveUsers('{{_id}}')">
            Eliminar
        </button>            
    </div>

</div>


