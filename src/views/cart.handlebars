<h1>{{title}}</h1>
<div class="cart-container">
    {{#each products}}
        <div class="product">
            <img src="{{this.product.thumbnail}}" alt="{{this.product.title}}">
            <div class="product-details">
                <h2>{{this.product.title}}</h2>
                <p>{{this.product.description}}</p>
                <p>Price: ${{this.product.price}}</p>
                <p>Quantity: {{this.quantity}}</p>
                <button class="delete-product-btn"
                        data-product-id="{{this.product._id}}"
                        data-cart-id="{{../cartId}}">
                    Eliminar
                </button>
            </div>
        </div>
    {{/each}}
</div>

<button id="generateTicketBtn" data-cart-id="{{cartId}}">Generar Ticket</button>

